#!/bin/sh

vtunduciport=$(uci get vtun.options.port 2>/dev/null)
vtundport=${vtunduciport:-5525}

nft insert rule inet fw4 input_wan tcp dport $vtundport counter accept
if [ "$(/sbin/uci -q get aredn.@tunnel[0].wanonly)" != "0" ]; then
    nft insert rule inet fw4 output_wifi tcp dport $vtundport counter reject
    nft insert rule inet fw4 output_dtdlink tcp dport $vtundport counter reject
fi
